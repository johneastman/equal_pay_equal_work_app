<h1><%= @employer.name %></h1>
<h2><%= link_to "File a Complaint", new_employer_complaint_path(@employer) %></h2>

<p><strong>Contact Person Name:</strong> <%= @employer.contact_person_name %></p>

<p><strong>Address</strong></p>
<p><%= @employer.mailing_address %></p>
<p><%= @employer.city %> <%= @employer.state %>, <%= @employer.zipcode %></p>

<p><strong>Phone Number:</strong> <%=@employer.phone_number %></p>
<p><strong>Email:</strong> <%=@employer.email_address %></p>
<p><strong>Website:</strong> <%=@employer.website %></p>

<% if @complaints.present? %>
  <p><strong>Complaints</strong></p>
  <ul>
  <% @complaints.each do |complaint| %>
      <li><%= link_to "Complaint ##{complaint.id}", employer_complaint_path(@employer, complaint) %></li>
  <% end %>
  </ul>
<% end %>

<p>
  <%= render "shared/redirect", back_url: employers_path %>
</p>
