<%= display_info(I18n.t("users.show_user.labels.name"), [user.first_name, user.last_name], sep=" ") %>
<!-- email will always be defined because it is required for sign up, so it doesn't need to be passed to 'display_info' -->
<strong><%= I18n.t("users.show_user.labels.email") %>:</strong> <%= mail_to(user.email) %>
<br/>
<%= render "shared/address",
            mailing_address: user.mailing_address,
            city: user.city,
            state: user.state,
            zipcode: user.zipcode
%>
<br>
<%= display_info(I18n.t("users.show_user.labels.primary_phone"), [user.primary_phone]) %>
<%= display_info(I18n.t("users.show_user.labels.alternate_phone"), [user.alt_phone]) %>
<%= display_info(I18n.t("users.show_user.labels.preferred_contact"), [user.preferred_contact]) %>
