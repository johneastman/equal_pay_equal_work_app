<%= display_info("Name", [user.first_name, user.last_name]) %>
<!-- email will always be defined because it is required for sign up, so it doesn't need to be passed to 'display_info' -->
<strong>Email:</strong> <%= mail_to(user.email) %>
<br/>
<%= display_info("Address", [user.mailing_address, user.city, user.state, user.zipcode]) %>
<%= display_info("Primary Phone", [user.primary_phone]) %>
<%= display_info("Alternate Phone", [user.alt_phone]) %>
<%= display_info("Preferred Contact Method", [user.preferred_contact]) %>
