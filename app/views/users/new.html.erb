<h1><%= I18n.t("users.new.header") %></h1>
<%= form_with(model: @user) do |f| %>
	<p>
		<%= f.label :email, I18n.t("users.new.form.labels.email") %>
		<%= f.text_field :email %>
	</p>

  <p>
		<%= f.label :password, I18n.t("users.new.form.labels.password") %>
		<%= f.password_field :password %>
	</p>

	<p><%= f.submit I18n.t("users.new.form.submit") %></p>
<% end %>

<p>
  <%= render "shared/redirect", back_url: request.referrer %>
</p>
